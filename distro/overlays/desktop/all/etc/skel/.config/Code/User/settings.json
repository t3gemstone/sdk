{
    // Window
    "window.titleBarStyle": "custom",
    "window.restoreWindows": "none",
    "window.zoomLevel": 1,
    "window.autoDetectHighContrast": false,
    "window.commandCenter": true,

    // Workbench
    "workbench.iconTheme": "vs-nomo-dark",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.list.horizontalScrolling": true,
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.quickOpen.preserveInput": true,
    "workbench.commandPalette.preserveInput": true,
    "workbench.editor.labelFormat": "short",
    "workbench.commandPalette.history": 100,
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.list.smoothScrolling": true,
    "workbench.colorTheme": "Box UK Contrast (rainglow)",
    "workbench.colorCustomizations": {},

    // Explorer
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,

    // Editor
    "editor.fastScrollSensitivity": 3,
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.fontFamily": "'JetBrains Mono', 'monospace', monospace",
    "editor.folding": true,
    "editor.fontWeight": "630",
    "editor.semanticHighlighting.enabled": true,
    "editor.rulers": [ 120 ],
    "editor.fontSize": 13,
    "editor.minimap.showSlider": "always",
    "editor.smoothScrolling": true,
    "editor.parameterHints.cycle": true,
    "editor.autoIndent": "advanced",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.guides.indentation": false,
    "editor.unicodeHighlight.allowedLocales": { "tr": true },
    "editor.unicodeHighlight.allowedCharacters": { "Â ": true },
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.codeLensFontFamily": "'JetBrains Mono', Monospace, 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.detectIndentation": false,
    "editor.fontLigatures": true,
    "editor.inlayHints.fontFamily": "'JetBrains Mono', 'monospace', monospace",
    "editor.tokenColorCustomizations": {
        "[Default Dark Modern]": {
            "comments": {
                "foreground": "#555555d8"
            }
        }
    },

    // Debug
    "debug.toolBarLocation": "docked",
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.allowBreakpointsEverywhere": true,
    "debug.enableAllHovers": true,
    "debug.console.closeOnEnd": true,
    "debug.terminal.clearBeforeReusing": true,

    // Terminal
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.enableFileLinks": "on",
    "terminal.integrated.fontFamily": "'JetBrains Mono', 'monospace', monospace",    
    "terminal.integrated.gpuAcceleration": "on",

    // Git
    "git.enableSmartCommit": true,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.statusBar.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.hovers.annotations.over": "annotation",
    "gitlens.codeLens.enabled": false,
    "gitlens.views.scm.grouped.views": {
        "commits": true,
        "branches": true,
        "remotes": true,
        "stashes": true,
        "tags": true,
        "worktrees": true,
        "contributors": true,
        "repositories": true,
        "searchAndCompare": false,
        "launchpad": false
    },

    // Extension: Guides
    "guides.normal.style": "dotted",
    "guides.sendUsagesAndStats": false,
    "guides.active.style": "dotted",
    "guides.normal.width": 2,
    "guides.stack.width": 2,
    "guides.active.hideOnSelection": false,
    "guides.indent.hideBackgroundOnSelection": false,
    "guides.active.gutter": true,
    "guides.active.width": 2,
    "guides.normal.hideOnSelection": false,
    "guides.overrideDefault": true,
    "guides.stack.style": "dotted",
    "guides.stack.enabled": true,
    "guides.active.extraIndent": true,

    "python.terminal.activateEnvironment": false,
    "python.createEnvironment.trigger": "off",
    "search.collapseResults": "alwaysCollapse",
    "search.quickOpen.includeSymbols": true,
    "search.showLineNumbers": true,
    "scm.alwaysShowActions": true,
    "scm.defaultViewMode": "tree",
    "redhat.telemetry.enabled": false,
    "C_Cpp.intelliSenseEngine": "disabled",
    "yaml.validate": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "text-align.maxLineLength": 120,
}
